---
import Layout from "../layouts/Layout.astro";
import Heading from "../components/atoms/Heading.astro";
import Container from "../components/atoms/Container.astro";
import Career from "../components/organisms/Career/Career.astro";
import About from "../components/organisms/About/About.astro";
import Contacts from "../components/organisms/Contacts/Contacts.astro";
import Projects from "../components/organisms/Projects/Projects.astro";
---

<Layout title="Ricardo Canastro - CV">
  <Container class="main-container" size="4">
    <Heading class="main-title" size="9" weight="regular">
      Hello ðŸ‘‹<br />I am Ricardo Canastro, <br /> a Fullstack Software Developer
      <br /> based in Portugal, specializing in frontend development.
    </Heading>

    <About />

    <hr />

    <Career />

    <hr />

    <Projects />

    <hr />

    <Contacts />
  </Container>
</Layout>

<style>
  :global(.main-container) {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    gap: var(--space-8);
    padding-block: var(--space-9);
    min-block-size: 100dvh;
  }

  :global(.main-title) {
    max-inline-size: 30ch;
  }

  hr {
    margin-inline: 0;
    inline-size: 272px;
    height: 1px;
    border: 0;
    border-top: 1px solid var(--text-color-muted);
    margin-block: 0;
    opacity: 0.5;
  }

  @media screen and (min-width: 768px) {
    hr {
      margin-inline: -1rem;
    }
  }
</style>
