---
import Heading from "../../../atoms/Heading.astro";
import Text from "../../../atoms/Text.astro";

interface Props {
  name: string;
  url: string;
  skills: string[];
  status: "WIP" | "DONE";
}

const { name, url, status } = Astro.props;
---

<div class="project-card--root">
  <a href={url}>
    <Heading as="h3" size="6" weight="regular">{name}</Heading>
    {
      status === "WIP" && (
        <Text size="2" style="italic">
          (work in progress)
        </Text>
      )
    }
  </a>

  <Text>
    <slot />
  </Text>
</div>

<style>
  .project-card--root {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    border-radius: var(--radius-3);
  }

  a {
    text-decoration: none;
    display: flex;
    flex-direction: row;
    align-items: flex-end;
    gap: var(--space-4);
    color: var(--text-color);
  }

  a:hover :global(h3) {
    text-decoration: underline;
  }
</style>
